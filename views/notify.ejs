    <title>TransitCheck - A community driven solution to get you places.</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/style.css" rel="stylesheet">
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link href="../css/style.css" rel="stylesheet">
    <link href="../css/font-awesome.min.css" rel="stylesheet">
      <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    	<style>
		body 		{ padding-top:80px; }
	</style>
	
</head>
<body>
	<% include navbar%>
	<div class="container" style="max-width: 70%;">
	<% if(User.userBuses.length != 0){ %>
		<h1>Fill the form to notify alerts</h1>
		<form action="/notifySubmit" method="post">
		<div class="jumbotron">
			<div class="form-group">
				<label>Choose direction: </label>
				<div class="radio">
					<input type="radio" name="direction" value="Northbound">  Northbound <br>
					<input type="radio" name="direction" value="Southbound">  Southbound <br>
					<input type="radio" name="direction" value="Westbound">  Westbound <br>
					<input type="radio" name="direction" value="Eastbound">  Eastbound<br>	
				</div>
			</div>
			<div class="form-group">
				<label>Choose bus route: </label>
				<div class="radio">
				<% User.userBuses.forEach(function(entry){ %>
					<input type="radio" name="route" value="<%= entry %>"><%= entry %><br>
					<% }); %>
				</div>
			</div>
			<div class="form-group">
			<label for="routes">Alert: </label> 
			<textarea type="text" rows="3" name="transitalert" class="form-control"></textarea>
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>	
		</div>
	</div>
		<br>
		 	
		 </div>
		</form>
		<%}else{%>
			<h1>You do not have any buses added yet. Add the bus route you want to create an alert for...</h1>
			<a href="/addRoutes"><button class="btn btn-primary">Add Bus Routes.</button></a>
			<%}%>
	</div>
</body>
</html>